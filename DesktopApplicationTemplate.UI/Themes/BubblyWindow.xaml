<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Style TargetType="Window" x:Key="BubblyWindowStyle">
        <Setter Property="Background" Value="#F0F8FF" />
        <Setter Property="BorderBrush" Value="#ADD8E6" />
        <Setter Property="BorderThickness" Value="2" />
        <Setter Property="AllowsTransparency" Value="True" />
        <Setter Property="WindowStyle" Value="None" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Window">
                    <Border Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}"
                            CornerRadius="10" Padding="5">
                        <Grid>
                            <DockPanel LastChildFill="True">
                                <Border DockPanel.Dock="Top" Background="#ADD8E6" Height="30" CornerRadius="8,8,0,0">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition />
                                            <ColumnDefinition Width="Auto" />
                                        </Grid.ColumnDefinitions>
                                        <TextBlock Text="{TemplateBinding Title}" VerticalAlignment="Center" Margin="10,0" FontWeight="Bold" />
                                        <Button Grid.Column="1" Content="X" Width="30" Height="30" Command="Close" Background="Transparent" BorderThickness="0" />
                                    </Grid>
                                </Border>
                                <ContentPresenter />
                            </DockPanel>
                        </Grid>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>
