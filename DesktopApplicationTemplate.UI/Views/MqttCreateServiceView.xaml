<Page x:Class="DesktopApplicationTemplate.UI.Views.MqttCreateServiceView"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      mc:Ignorable="d">
    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <Grid Margin="20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" /> <!-- Service Name -->
                <RowDefinition Height="Auto" /> <!-- Host -->
                <RowDefinition Height="Auto" /> <!-- Port -->
                <RowDefinition Height="Auto" /> <!-- ClientId -->
                <RowDefinition Height="Auto" /> <!-- Username -->
                <RowDefinition Height="Auto" /> <!-- Password -->
                <RowDefinition Height="Auto" /> <!-- UseTls -->
                <RowDefinition Height="Auto" /> <!-- Cert Path -->
                <RowDefinition Height="Auto" /> <!-- Will Topic -->
                <RowDefinition Height="Auto" /> <!-- Will Payload -->
                <RowDefinition Height="Auto" /> <!-- Will QoS -->
                <RowDefinition Height="Auto" /> <!-- Will Retain -->
                <RowDefinition Height="Auto" /> <!-- KeepAlive -->
                <RowDefinition Height="Auto" /> <!-- CleanSession -->
                <RowDefinition Height="Auto" /> <!-- ReconnectDelay -->
                <RowDefinition Height="Auto" /> <!-- Buttons -->
            </Grid.RowDefinitions>

            <TextBlock Grid.Row="0" Grid.Column="0" Text="Service Name" Margin="0,0,10,5"/>
            <TextBox Grid.Row="0" Grid.Column="1" Text="{Binding ServiceName}" Margin="0,0,0,5"/>

            <TextBlock Grid.Row="1" Grid.Column="0" Text="Host" Margin="0,0,10,5"/>
            <TextBox Grid.Row="1" Grid.Column="1" Text="{Binding Host}" Margin="0,0,0,5"/>

            <TextBlock Grid.Row="2" Grid.Column="0" Text="Port" Margin="0,0,10,5"/>
            <TextBox Grid.Row="2" Grid.Column="1" Text="{Binding Port}" Margin="0,0,0,5"/>

            <TextBlock Grid.Row="3" Grid.Column="0" Text="Client Id" Margin="0,0,10,5"/>
            <TextBox Grid.Row="3" Grid.Column="1" Text="{Binding ClientId}" Margin="0,0,0,5"/>

            <TextBlock Grid.Row="4" Grid.Column="0" Text="Username" Margin="0,0,10,5"/>
            <TextBox Grid.Row="4" Grid.Column="1" Text="{Binding Username}" Margin="0,0,0,5"/>

            <TextBlock Grid.Row="5" Grid.Column="0" Text="Password" Margin="0,0,10,5"/>
            <TextBox Grid.Row="5" Grid.Column="1" Text="{Binding Password}" Margin="0,0,0,5"/>

            <CheckBox Grid.Row="6" Grid.Column="1" Content="Use TLS" IsChecked="{Binding UseTls}" Margin="0,0,0,5"/>

            <TextBlock Grid.Row="7" Grid.Column="0" Text="Client Certificate" Margin="0,0,10,5"/>
            <TextBox Grid.Row="7" Grid.Column="1" Text="{Binding ClientCertificatePath}" Margin="0,0,0,5"/>

            <TextBlock Grid.Row="8" Grid.Column="0" Text="Will Topic" Margin="0,0,10,5"/>
            <TextBox Grid.Row="8" Grid.Column="1" Text="{Binding WillTopic}" Margin="0,0,0,5"/>

            <TextBlock Grid.Row="9" Grid.Column="0" Text="Will Payload" Margin="0,0,10,5"/>
            <TextBox Grid.Row="9" Grid.Column="1" Text="{Binding WillPayload}" Margin="0,0,0,5"/>

            <TextBlock Grid.Row="10" Grid.Column="0" Text="Will QoS" Margin="0,0,10,5"/>
            <ComboBox Grid.Row="10" Grid.Column="1" ItemsSource="{Binding QoSLevels}" SelectedItem="{Binding WillQualityOfService}" Margin="0,0,0,5"/>

            <CheckBox Grid.Row="11" Grid.Column="1" Content="Will Retain" IsChecked="{Binding WillRetain}" Margin="0,0,0,5"/>

            <TextBlock Grid.Row="12" Grid.Column="0" Text="Keep Alive" Margin="0,0,10,5"/>
            <TextBox Grid.Row="12" Grid.Column="1" Text="{Binding KeepAliveSeconds}" Margin="0,0,0,5"/>

            <CheckBox Grid.Row="13" Grid.Column="1" Content="Clean Session" IsChecked="{Binding CleanSession}" Margin="0,0,0,5"/>

            <TextBlock Grid.Row="14" Grid.Column="0" Text="Reconnect Delay" Margin="0,0,10,5"/>
            <TextBox Grid.Row="14" Grid.Column="1" Text="{Binding ReconnectDelaySeconds}" Margin="0,0,0,5"/>

            <StackPanel Grid.Row="15" Grid.ColumnSpan="2" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,10,0,0">
                <Button Content="Create" Width="100" Margin="5" Command="{Binding CreateCommand}"/>
                <Button Content="Cancel" Width="100" Margin="5" Command="{Binding CancelCommand}"/>
            </StackPanel>
        </Grid>
    </ScrollViewer>
</Page>
